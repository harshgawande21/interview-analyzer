{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "Emotion/static/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "Emotion/templates/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "PYTHONPATH": "/var/task"
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.9"
    },
    "use": "@vercel/python",
    "config": {
      "installCommand": "pip install -r requirements.txt"
    }
  },
  "include": [
    "Emotion/**/*",
    "api/**/*",
    "requirements.txt"
  ]
}
